<Project>
  <PropertyGroup>
    <GlobalNoWarn>
      <!-- Tabs vs spaces are of no concern and this is difficult to turn off project wide. -->
      SA1027,
      
      <!-- Trailing whitespace is a useless error, this is sometimes generated by the IDE -->
      SA1028
    </GlobalNoWarn>
    <NoWarn>
      $(GlobalNoWarn)
    </NoWarn>
    <CommonAllFrameworks>netstandard2.0;netcoreapp2.0;net462;net47;net471</CommonAllFrameworks>
    <CommonDebugFrameworks>netcoreapp2.0</CommonDebugFrameworks>
  </PropertyGroup>


  <PropertyGroup Condition="'$(Configuration)' == 'Debug'">
    <DebugType>full</DebugType>
  </PropertyGroup>

</Project>
